{
  "name": "crm-system",
  "version": "1.0.0",
  "description": "Customer Relationship Management",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node -r module-alias/register dist/src/server.js",
    "dev": "ts-node -r tsconfig-paths/register src/server.ts",
    "prebuild": "rm -rf dist",
    "build": "tsc || true && tsc-alias || true && mkdir -p dist/src/utils && cp -r src/utils/{log,errors} dist/src/utils/",
    "build:force": "tsc --noEmitOnError && tsc-alias && cp -r src/utils/{log,errors} dist/src/utils/",
    "postbuild": "cp -r src/utils/{log,errors} dist/src/utils/",
    "watch": "tsc -w",
    "backup": "ts-node -r tsconfig-paths/register scripts/run-backup.ts",
    "restore": "ts-node -r tsconfig-paths/register scripts/run-restore.ts",
    "schema:pull": "prisma db pull && ts-node -r tsconfig-paths/register scripts/zod-prisma-types/add-zod-validations.ts",
    "schema:push": "npm run schema:prisma:push && npm run view:prisma:push",
    "schema:prisma:push": "prisma db push",
    "view:prisma:push": "ts-node -r tsconfig-paths/register scripts/prisma/push-views.ts",
    "prisma:generate": "prisma generate && npm run prisma:bugfix:convert-aggregate && npm run convert:zod:comments",
    "prisma:bugfix:convert-aggregate": "ts-node -r tsconfig-paths/register scripts/zod-prisma-types/convert-aggregate-names.ts",
    "convert:zod:comments": "ts-node scripts/zod-prisma-types/convert-zod-comments.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "async": "^3.2.5",
    "body-parser": "^1.20.2",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-fileupload": "^1.5.0",
    "module-alias": "^2.2.3",
    "multer": "^1.4.5-lts.1",
    "mysql": "^2.18.1",
    "mysql2": "^3.11.4",
    "node": "^21.2.0",
    "reflect-metadata": "^0.2.2",
    "runtypes": "^6.7.0",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8",
    "zod-prisma-types": "^3.1.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.17.13",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^22.9.0",
    "cross-env": "^7.0.3",
    "glob": "^11.0.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.22.0",
    "prisma-repo": "^0.3.12",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "type-fest": "^4.26.1",
    "typeorm-extension": "^3.6.3",
    "typescript": "^5.6.3"
  },
  "_moduleAliases": {
    "@": "dist",
    "@src": "dist/src",
    "@config": "dist/config",
    "@prisma": "dist/prisma",
    "@zod-schemas": "dist/prisma/zod-schemas",
    "@models": "dist/prisma/schema",
    "@utils": "dist/src/utils",
    "@backups": "dist/backups",
    "@scripts": "dist/scripts",
    "@routes": "dist/src/routes",
    "@controllers": "dist/src/controllers",
    "@repositories": "dist/src/repositories",
    "@services": "dist/src/services",
    "@middlewares": "dist/src/middlewares",
    "@lib": "dist/src/lib",
    "@base": "dist/src/base",
    "@common": "dist/src/common"
  }
}
