{
  "name": "crm-system",
  "version": "1.0.0",
  "description": "Customer Relationship Management",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node -r module-alias/register dist/src/server.js",
    "dev": "ts-node -r tsconfig-paths/register src/server.ts",
    "prebuild": "rm -rf dist",
    "build": "tsc || true && tsc-alias || true && mkdir -p dist/src/utils && cp -r src/utils/{log,errors} dist/src/utils/",
    "build:force": "tsc --noEmitOnError && tsc-alias && cp -r src/utils/{log,errors} dist/src/utils/",
    "postbuild": "cp -r src/utils/{log,errors} dist/src/utils/",
    "watch": "tsc -w",
    "backup": "ts-node -r tsconfig-paths/register scripts/run-backup.ts",
    "restore": "ts-node -r tsconfig-paths/register scripts/run-restore.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "schema:sync": "NODE_PATH=. ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:sync -d config/data-source.ts",
    "schema:log": "typeorm-ts-node-commonjs schema:log -d ./config/data-source.ts",
    "schema:drop": "typeorm-ts-node-commonjs schema:drop -d ./config/data-source.ts",
    "schema:generate": "typeorm-ts-node-commonjs migration:generate -d ./config/data-source.ts src/migrations/auto",
    "migration:create": "typeorm-ts-node-commonjs migration:create -d ./config/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d ./config/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d ./config/data-source.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d ./config/data-source.ts",
    "entity:generate": "ts-node scripts/generate-entities.ts",
    "view:generate": "ts-node -r tsconfig-paths/register scripts/generate-view-entities.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "async": "^3.2.5",
    "body-parser": "^1.20.2",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-fileupload": "^1.5.0",
    "module-alias": "^2.2.3",
    "multer": "^1.4.5-lts.1",
    "mysql": "^2.18.1",
    "mysql2": "^3.11.4",
    "node": "^21.2.0",
    "reflect-metadata": "^0.2.2",
    "runtypes": "^6.7.0",
    "typeorm": "^0.3.20",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^22.9.0",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.2",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "type-fest": "^4.26.1",
    "typeorm-extension": "^3.6.3",
    "typescript": "^5.6.3"
  },
  "_moduleAliases": {
    "@": "dist",
    "@src": "dist/src",
    "@config": "dist/config",
    "@utils": "dist/src/utils",
    "@views": "dist/src/views",
    "@middlewares": "dist/src/middlewares",
    "@routes": "dist/src/routers",
    "@controllers": "dist/src/controllers",
    "@models": "dist/src/models",
    "@services": "dist/src/services",
    "@entities": "dist/src/entities",
    "@migrations": "dist/src/migrations",
    "@subscribers": "dist/src/subscribers",
    "@lib": "dist/src/lib"
  }
}
