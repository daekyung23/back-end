{
  "name": "crm-system",
  "version": "1.0.0",
  "type": "module",
  "description": "Customer Relationship Management",
  "engines": {
    "node": ">=20.13.1",
    "npm": ">=10.5.2"
  },
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "dotenv -e .env.production -- pm2 start ecosystem.config.cjs", 
    "stop": "pm2 stop server",
    "log": "pm2 logs server",
    "restart": "pm2 restart server",
    "status": "pm2 status",
    "dev": "dotenv -e .env.development -- npx tsx watch src/server.ts",
    "prebuild": "npx rimraf dist",
    "build": "npm run prisma:generate:prod && rollup -c",
    "watch": "rollup -c -w",
    "backup": "dotenv -e .env.development -- node scripts/backup/run-backup.js",
    "restore": "dotenv -e .env.development -- node scripts/backup/run-restore.js",
    "prisma:pull": "dotenv -e .env.development -- prisma db pull",
    "prisma:push": "dotenv -e .env.development -- prisma db push && node scripts/prisma/push-views.js",
    "prisma:generate": "dotenv -e .env.development -- prisma generate",
    "prisma:generate:prod": "dotenv -e .env.production -- prisma generate"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.1.1",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "jsonc-parser": "^3.3.1",
    "mysql2": "^3.11.4",
    "type-fest": "^4.27.0",
    "zod": "3.21.1"
  },
  "devDependencies": {
    "@prisma/internals": "^5.1.1",
    "@prisma/sdk": "^4.0.0",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.9.0",
    "dotenv-cli": "^7.4.2",
    "minimist": "^1.2.8",
    "nodemon": "^3.0.2",
    "prisma": "^5.1.1",
    "rollup": "^4.27.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3"
  }
}
