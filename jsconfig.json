{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@src/*": ["src/*"],
      "@config": ["config"],
      "@config/*": ["config/*"],
      "@prisma": ["prisma"],
      "@prisma/*": ["prisma/*"],
      "@zod-schemas": ["prisma/zod-schemas"],
      "@zod-schemas/*": ["prisma/zod-schemas/*"],
      "@models": ["prisma/schema"],
      "@models/*": ["prisma/schema/*"],
      "@utils/*": ["src/utils/*"],
      "@backups/*": ["backups/*"],
      "@scripts/*": ["scripts/*"],
      "@routes/*": ["src/routes/*"],
      "@routes": ["src/routes"],
      "@controllers/*": ["src/controllers/*"],
      "@repositories/*": ["src/repositories/*"],
      "@services/*": ["src/services/*"],
      "@services": ["src/services"],
      "@middlewares/*": ["src/middlewares/*"],
      "@lib/*": ["src/lib/*"],
      "@base/*": ["src/base/*"]
    }
  }
} 